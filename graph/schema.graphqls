# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  username: String!
  email: String!
  todos: [Todo!]!
}

type Query {
  todos: [Todo!]!
  user(id: ID!): User
  users: [User!]!
}

input NewTodo {
  text: String!
  userId: String!
}

input NewUser {
  username: String!
  email: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  createUser(input: NewUser!): User!
}
